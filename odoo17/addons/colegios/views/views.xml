<!--implementacion-->
    <record model="ir.ui.view" id="colegios.nota_kanban">
      <field name="name">colegios nota kanban</field>
      <field name="model">colegios.nota</field>
      <field name="arch" type="xml">
          <kanban>
            <templantes>
            <t t-name="kanban-box">
            <div class ="oe_kanban_global_click card">
               <div class = "card-header d-flex justify-content-between aling-items-center">
               <strong class = "text-primary"> Nombre: <field name="materia_name"/>
               </strong>

               </div>
              <div class= "card-body">
                <field name="alumno_name"/> <field name="alumno_ap_pater"/><br/>
                  <field name="gestion_name"/><br/>
                  <field name="curso_name"/><br/>
              </div>
            </div>
            </t>
           </templantes>
          </kanban>
      </field>
    </record>


